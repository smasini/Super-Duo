<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/list_horizonal_margin"
    android:layout_marginRight="@dimen/list_horizonal_margin"
    android:layout_marginStart="@dimen/list_horizonal_margin"
    android:layout_marginEnd="@dimen/list_horizonal_margin"
    tools:context=".MainActivity$PlaceholderFragment">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id = "@+id/scores_list"
            android:divider="@android:color/transparent"
            android:dividerHeight="15sp"
            />
    <TextView
        android:id="@+id/list_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:textAppearanceLarge"
        android:contentDescription="@string/no_scores_available"
        android:text="@string/no_scores_available" />
</FrameLayout>
